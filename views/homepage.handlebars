<!-- Loop over each object in the projects array -->
{{#each blogpost as |blogpost|}}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/project/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>Created by {{blogpost.user.name}} on {{format_date blogpost.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.content}}
    </p>
  </div>
</div>
{{/each}}
