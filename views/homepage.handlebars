<!-- Loop over each object in the blogpost array -->
{{#if logged_in}}
{{#each blogpost as |blogpost|}}
<div class="row mb-4 blogpost">
  <div class="col-md-5">
    <h2>
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>Written by {{blogpost.user.name}} on {{format_date blogpost.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.content}}
    </p>
  </div>
</div>
{{/each}}
{{else}}
{{#each blogpost as |blogpost|}}
<div class="row mb-4 blogpost">
  <div class="col-md-5">
    <h2>
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.content}}
    </p>
  </div>
</div>
{{/each}}

{{/if}}
