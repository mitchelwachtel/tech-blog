<div class="row mb-4 blogpost">
  <div class="col-md-5">
    <h2>
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>Written by {{blogpost.user.name}} on {{format_date blogpost.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.content}}
    </p>
  </div>

</div >
<div class="comments-section">
  <div class="declare">
      <p>Comments:</p>
      <div class="form-group">
         <a href="/comment/{{blogpost.id}}"><button class="btn btn-primary" type="button" >Leave a comment</button></a> 
      </div>
      
  </div>
  
{{#each comment as |comment|}}
<div class="row mb-4 comment">
  <div class="col-md-5">
    <p>{{comment.user.name}} on {{format_date comment.date}}</p>
  </div>
  <div class="col-md-7 comment-content">
    <p>
      {{comment.content}}
    </p>
  </div>
</div>
{{/each}}
</div>