<div>
    <div class="declare">
      <h2>Hey {{user.name}}!</h2>
      <div class="form-group">
       <a href="/newblogpost"> <button class="btn btn-primary" type="button">Add a new blog post</button></a>
      </div>
      
  </div>

{{#each user.blogposts as |blogpost|}}
<div class="row mb-4 blogpost">
  <div class="col-md-5">
    <h2>
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>Written on {{format_date blogpost.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.content}}
    </p>
  </div>
</div>
{{/each}}